{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2016", "DOM"],
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2016",
    "types": ["node"]
  },
  "exclude": ["node_modules", "functions-old", "subscribers-old"],
  "include": ["**/*.ts"]
}
