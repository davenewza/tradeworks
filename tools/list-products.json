    "$.results[*].updatedAt": {
      "display_order": 11,
      "visible": false
    }
  },
  "entry_activity_actions": [
    {
      "tool_id": "get-product",
      "display_order": 0
    },
    {
      "tool_id": "update-product",
      "display_order": 1
    },
    {
      "tool_id": "delete-product",
      "display_order": 2
    }
  ],
  "filter_config": {
    "quick_search_field": "$.where.name.contains"
  }
