{
  "id": "list-products",
  "action_name": "listProducts",
  "name": "Our products",
  "response": {
    "$.results[*].brandId": {
      "display_order": 3
    },
    "$.results[*].costPrice": {
      "display_order": 7,
      "visible": false
    },
    "$.results[*].createdAt": {
      "display_order": 10,
      "visible": false
    },
    "$.results[*].freightIn": {
      "display_order": 8,
      "visible": false
    },
    "$.results[*].id": {
      "display_order": 9,
      "visible": false,
      "link": {
        "tool_id": "get-product",
        "display_order": 0,
        "data_mapping": [
          {
            "key": "$.id",
            "path": {
              "path": "$.results[*].id"
            }
          }
        ]
      }
    },
    "$.results[*].image": {
      "display_order": 5,
      "visible": false
    },
    "$.results[*].name": {
      "display_order": 4
    },
    "$.results[*].sku": {
      "display_order": 2
